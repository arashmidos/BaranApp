<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:fillViewport="true">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="org.baran.activities.Login"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ثبت نام"
            android:id="@+id/registerlabel"
            android:layout_gravity="center_horizontal"
            android:textColor="#000"
            android:textSize="26sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="نام و نام خانوادگی"
            android:id="@+id/labelname"
            android:layout_gravity="right"
            android:textSize="17sp"
            android:textColor="#848484" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/txtname"
            android:layout_gravity="right"
            android:background="@drawable/register_edit_text"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="پست الکترونیکی"
            android:id="@+id/labelmailregister"
            android:layout_gravity="right"
            android:textSize="17sp"
            android:textColor="#848484"
            android:layout_marginTop="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/txtmailregister"
            android:layout_gravity="right"
            android:background="@drawable/register_edit_text"
            android:gravity="center"
            android:textColor="#000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="رمز عبور"
            android:id="@+id/labelpassregister"
            android:layout_gravity="right"
            android:textSize="17sp"
            android:textColor="#848484"
            android:layout_marginTop="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/txtpassregister"
            android:layout_gravity="right"
            android:background="@drawable/register_edit_text"
            android:gravity="center"
            android:textColor="#000"
            android:inputType="textPassword" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تکرار رمز عبور"
            android:id="@+id/labelrepassregister"
            android:layout_gravity="right"
            android:textSize="17sp"
            android:textColor="#848484"
            android:layout_marginTop="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/txtrepassregister"
            android:layout_gravity="right"
            android:background="@drawable/register_edit_text"
            android:gravity="center"
            android:textColor="#000"
            android:inputType="textPassword" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="موبایل"
            android:id="@+id/labelmobileregister"
            android:layout_gravity="right"
            android:textSize="17sp"
            android:textColor="#848484"
            android:layout_marginTop="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/txtmobileregister"
            android:layout_gravity="right"
            android:background="@drawable/register_edit_text"
            android:gravity="center"
            android:textColor="#000"
            android:inputType="number" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/txtvFont"
                android:layout_below="@+id/txtvFontFamily"
                android:layout_marginRight="45dp"
                android:gravity="right"
                android:layout_weight="0.3">

                <RadioButton
                    android:id="@+id/radio0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="مرد"
                    android:button="@null"
                    android:drawableRight="@android:drawable/btn_radio"
                    android:textSize="12dp"/>

                <RadioButton
                    android:id="@+id/radio1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="زن"
                    android:button="@null"
                    android:drawableRight="@android:drawable/btn_radio"
                    android:textSize="12dp"/>

            </RadioGroup>



            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="سن"
            android:id="@+id/labelageregister"
            android:layout_gravity="right"
            android:textSize="17sp"
            android:textColor="#848484"
            android:layout_marginTop="20dp" />

        <EditText
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:id="@+id/txtageregister"
            android:layout_gravity="right"
            android:background="@drawable/register_edit_text"
            android:gravity="center"
            android:textColor="#000"
            />
                </LinearLayout>



        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textColor="#fff"
            android:textSize="29sp"
            android:background="#F7FE2E"
            android:text="ثبت نام"
            android:id="@+id/btnregister" />

    </LinearLayout>



</ScrollView>




    <include layout="@layout/navitwolist" />




    </android.support.v4.widget.DrawerLayout>

