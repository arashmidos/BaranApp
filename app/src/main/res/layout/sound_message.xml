<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/notificationbackground"
        tools:context="org.baran.Notifications.Notification_message"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="0.009"
            android:background="@drawable/shape_title"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/logo_img_message"
                android:layout_weight="0.05" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="New Text"
                android:layout_weight="0.1"
                android:id="@+id/txt_title_message"
                android:textColor="#fff"
                android:textSize="23sp"
                android:gravity="center_vertical|center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.03"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/txtdatemessage"
                android:layout_weight="0.5"
                android:textSize="19sp"
                android:textColor="#fff"
                android:gravity="right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تاریخ ارسال پیام:"
                android:id="@+id/labeldate"
                android:layout_weight="0.3"
                android:gravity="right"
                android:textColor="#fff"
                android:textSize="19sp" />
        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:id="@+id/sound_notif"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.02"
            android:textSize="17sp"
            android:background="@drawable/play"
            android:textColor="#fff"
            android:gravity="right"
            android:layout_marginBottom="20dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="بستن آگهی"
            android:background="@drawable/btn_see"
            android:id="@+id/btnseenotification"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.003"
            android:textColor="#fff"
            android:textSize="30sp"
            android:textStyle="bold" />


    </LinearLayout>


    <include layout="@layout/navitwolist" />

</android.support.v4.widget.DrawerLayout>